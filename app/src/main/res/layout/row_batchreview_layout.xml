<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#DDDFE6"
    android:id="@+id/mainLayout">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:background="#DDDFE6">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_white_bg">

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Host"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="BDO"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="PAN"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg1"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="1234-5678-9012"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Card Type"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg2"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="JCB"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Batch No."
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg3"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="000001"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Invoice No."
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg4"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="000002"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Appr Code"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg5"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="BDO"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Date/Time"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg6"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="11/09/1980 11:11:11"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Transaction Type"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg7"
                        android:layout_width="160dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="Sale"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:text="Amount"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/box_msg8"
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="right|center_vertical"
                        android:text="PHP 000,000,000.00"
                        android:textColor="@color/success_bgc"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        />

                </LinearLayout>

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>