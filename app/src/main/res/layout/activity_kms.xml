<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.Source.S1_BDO.BDO.Main.MainActivity">

    <TextView
        android:visibility="gone"
        android:id="@+id/PinDigitTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_login_enter_access_code"
        android:textColor="#000000"
        android:textSize="@dimen/twenty_dp"
        android:tag="Medium"
        android:gravity="center"
        android:paddingTop="@dimen/thirty_dp"
        android:paddingBottom="@dimen/ten_dp"/>

    <LinearLayout
        android:id="@+id/linearLayout_header"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:background="@color/header_bgc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >

            <Button
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="200dp"
                android:layout_gravity="center_horizontal|center"
                android:background="@color/header_bgc"
                />

            <TextView
                android:id="@+id/app_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center"
                android:background="@drawable/ic_logo"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView_txn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/transaction_bgc"
            android:textSize="18dp"
            android:text="Balance Inquiry"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView_disp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Please enter PIN"
            android:textColor="@color/whitesmoke"
            android:textSize="20dp"
            android:textStyle="bold"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout_entry"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal|center"
            android:background="@drawable/shape_white_bg"
            >

            <EditText
                android:id="@+id/PinDigitEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/pin_edit_text"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/FunctionkeyText"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_below="@+id/PinDigitEditText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="81dp"
                android:background="@drawable/pin_edit_text"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:textColor="@color/blue" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="350dp"
        android:gravity="center"
        android:text="PLEASE HAND PINPAD \nTO CUSTOMER"
        android:textSize="@dimen/twenty_dp"
        android:textColor="#000000"/>

</LinearLayout>
