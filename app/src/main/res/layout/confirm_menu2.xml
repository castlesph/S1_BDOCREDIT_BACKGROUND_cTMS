<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.Source.S1_BDO.BDO.Main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_logo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_footer">

        <TextView
            android:id="@+id/textView_txn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/darkblue"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="left|center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/textView_cur"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="HOST NAME"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:background="@drawable/shape_confirm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp">

            <TextView
                android:id="@+id/msg_text_01"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_count_01"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_detail_01"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_text_02"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_count_02"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_detail_02"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_text_03"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_count_03"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_detail_03"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_text_04"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_count_04"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_detail_04"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_text_05"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_count_05"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

            <TextView
                android:id="@+id/msg_detail_05"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:gravity="right|center_vertical"
                android:text=""
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="16dp"
                android:visibility="visible"
                tools:text="" />

        </LinearLayout>


    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/clayout_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="@dimen/eleven_dp"
        android:background="@color/white">

        <Button
            android:id="@+id/IPT_CancelButton"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_gray"
            android:text="CANCEL"
            android:textSize="22sp"
            android:visibility="visible"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/IPT_OKButton"
            android:layout_width="190dp"
            android:layout_height="55dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_bule_button"
            android:text="OK"
            android:textSize="22sp"
            android:visibility="visible"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>